<view class="header">
   <view class="banner">
      <swiper indicator-dots indicator-color="rgba(255,255,255,0.5)" indicator-active-color="#fff" circular autoplay interval="2000">
         <swiper-item>
            <image src="/images/banner/banner_p2.jpg" show-menu-by-longpress></image>
         </swiper-item>
         <swiper-item>
            <image src="/images/banner/banner_p3.jpg" show-menu-by-longpress></image>
         </swiper-item>
      </swiper>
   </view>
   <van-notice-bar left-icon="volume-o" text="在代码阅读过程中人们说脏话的频率是衡量代码质量的唯一标准。" />
</view>
<scroll-view class="comment-scroll" scroll-y="true">
   <comment posts="{{posts}}" usersMap="{{usersMap}}" commentsMap="{{commentsMap}}" />
</scroll-view>
<van-tabbar active="{{ active }}" bind:change="onChange">
    <van-tabbar-item info="3">
      <image slot="icon" src="../../images/icons/home1.png" mode="aspectFit" style="width: 30px; height: 18px;" />
      <image slot="icon-active" src="../../images/icons/home2.png" mode="aspectFit" style="width: 30px; height: 18px;" />
      首页
   </van-tabbar-item>
    <van-tabbar-item info="3">
      <image slot="icon" src="../../images/icons/message3.png" mode="aspectFit" style="width: 30px; height: 18px;" />
      <image slot="icon-active" src="../../images/icons/message4.png" mode="aspectFit" style="width: 30px; height: 18px;" />
      消息
   </van-tabbar-item>
    <van-tabbar-item >
      <image slot="icon" src="../../images/icons/my.png" mode="aspectFit" style="width: 30px; height: 18px;" />
      <image slot="icon-active" src="../../images/icons/my1.png" mode="aspectFit" style="width: 30px; height: 18px;" />
      我的
   </van-tabbar-item>
</van-tabbar>
<view class="fab-btn" bindtap="goToTargetPage">
  <van-icon name="plus" size="32px" color="#fff" />
</view>