<form bindsubmit="formSubmit" id="1" bindreset="formReset">    
  <van-field
    value="{{ username }}"
    clearable="{{true}}"
    label="用户名"
    placeholder="请输入用户名"
    bind:click-icon="onClickIcon"
  />
  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    border="{{false}}"
  />

  <van-radio-group value="{{ radio }}" bind:change="onChange">
    <van-cell-group>
      <van-cell title="失物招领" clickable data-name="1" bind:click="onClick">
        <van-radio slot="right-icon" name="1" />
      </van-cell>
      <van-cell title="日常交流" clickable data-name="2" bind:click="onClick">
        <van-radio slot="right-icon" name="2" />
      </van-cell>
      <van-cell title="学习资源" clickable data-name="3" bind:click="onClick">
        <van-radio slot="right-icon" name="3" />
      </van-cell>
      <van-cell title="资源分享" clickable data-name="4" bind:click="onClick">
        <van-radio slot="right-icon" name="4" />
      </van-cell>
    </van-cell-group>
  </van-radio-group>

  <view class="big-logos">
    <view class="big-logos_img">
      <image bindtap="upimg" src="http://www.ar1es.cn/cimg.png" />
    </view>
    <block wx:for="{{img_arr}}" wx:for-item="item" wx:for-index="index" wx:key="index"> 
      <view class="logoinfo">    
        <image src="{{item}}" mode="aspectFit" />
      </view>  
    </block>    
  </view>    
  <van-button type="primary" block>发布</van-button>
</form>