<view class="post-container">
  <form bindsubmit="formSubmit">
    <view class="form-section">
      <van-field value="{{ user_id }}" label="用户ID" placeholder="请输入您的用户ID" border="false" name="user_id" bind:input="onUserIdInput"/>
    </view>
    <view class="form-section">
      <van-field value="{{ title }}" label="标题" placeholder="请输入帖子标题" border="false" name="title" bind:input="onTitleInput"/>
    </view>
    <view class="form-section">
      <van-field value="{{ content }}" label="内容" type="textarea" autosize placeholder="请输入帖子内容" border="false" name="content" bind:input="onContentInput"/>
    </view>
    <view class="form-section">
      <van-uploader file-list="{{ fileList }}" max-count="9" bind:after-read="afterRead" deletable />
    </view>
    <view class="form-section">
      <van-field value="{{ create_time }}" label="发布时间" placeholder="自动生成" border="false" disabled />
    </view>
    <view class="form-section">
      <van-field value="{{ like_count }}" label="点赞数" placeholder="0" border="false" disabled />
    </view>
    <view class="form-section">
      <van-button type="primary" block formType="submit">发布</van-button>
    </view>
  </form>
</view>